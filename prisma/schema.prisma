generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Contact {
  id                   String   @id @default(cuid())
  email                String   @unique
  firstName            String
  personalityType      String
  experienceLevel      String
  performance          String
  automationExperience String
  biggestChallenge     String
  decisionStyle        String
  scores               String   // JSON string
  locale               String   @default("en")
  brevoContactId       String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  emails               EmailSchedule[]
}

model EmailSchedule {
  id             String    @id @default(cuid())
  contactId      String
  contact        Contact   @relation(fields: [contactId], references: [id])
  emailNumber    Int
  scheduledAt    DateTime
  sentAt         DateTime?
  status         String    @default("pending")
  brevoMessageId String?
  createdAt      DateTime  @default(now())

  @@index([status, scheduledAt])
  @@index([contactId])
}

model EmailTemplate {
  id          String         @id @default(cuid())
  name        String         // Internal name (e.g., "Welcome Email")
  subject     String
  body        String         @db.Text
  category    String?        // e.g., "nurture", "promotion", "announcement"
  status      String         @default("draft") // "draft" or "published"
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  campaigns   EmailCampaign[]
}

model EmailCampaign {
  id                String    @id @default(cuid())
  templateId        String?
  template          EmailTemplate? @relation(fields: [templateId], references: [id])
  name              String    // Campaign name
  subject           String    // Email subject (can override template)
  body              String    @db.Text // Email body (can override template)
  segmentType       String?   // "all", "personality_type", "custom"
  segmentFilter     String?   @db.Text // JSON filter criteria
  recipientCount    Int       @default(0)
  sentCount         Int       @default(0)
  openCount         Int       @default(0)
  clickCount        Int       @default(0)
  status            String    @default("draft") // "draft", "sending", "sent", "failed"
  scheduledAt       DateTime?
  sentAt            DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
}

model QuizForm {
  id          String             @id @default(cuid())
  name        String             // Display name (e.g., "English Default", "Russian Default")
  slug        String             @unique // URL slug (e.g., "en-default", "ru-default", "crypto-traders")
  locale      String             @default("en")
  description String?            // Admin-only notes
  status      String             @default("draft") // "draft" or "published"
  resultsPath String             @default("/results") // Base path for results
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  questions   QuizFormQuestion[]

  @@index([status])
}

model QuizFormQuestion {
  id            String   @id @default(cuid())
  formId        String
  form          QuizForm @relation(fields: [formId], references: [id], onDelete: Cascade)
  questionKey   String   // Internal key (e.g., "first_name", "email", "biggest_challenge")
  type          String   // "text", "email", "multiple_choice"
  question      String   // Display text
  placeholder   String?  // For text/email inputs
  options       String?  @db.Text // JSON array: [{ "value": "...", "label": "..." }]
  position      Int      // Order in quiz (0-indexed)
  required      Boolean  @default(true)
  scoringWeight Int      @default(0) // 0 = not scored, 3 = primary, etc.
  scoringMap    String?  @db.Text // JSON: { "answer_value": { "personality_type": points } }
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([formId, position])
  @@index([formId])
}
